@model CategoryModel
@{
    ViewData["Title"] = "Create Category";
}

    <h1>Create Category</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group row">
                <label class="col-md-2 col-form-label" asp-for="Name">Name</label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Name" value="" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" value="Save Product" class="btn btn-primary">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>

